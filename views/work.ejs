<%- include("partials/header.ejs") %>

<h1>Work To-Do List</h1>

<% if (locals.tasks.length > 0) { %>
    <ul>
        <% for (var i = 0; i < tasks.length; i++) { %>
            <li>
                <input type="checkbox" id="task<%= i %>">
                <label for="task<%= i %>"><%= tasks[i] %></label>
            </li>
        <% } %>
    </ul>
<% } else { %>
    <h3>You do not have any tasks to complete</h3>
<% } %>

<form action="/work" method="POST">
    <input type="text" id="taskInput" name="taskInput" placeholder="Enter a task" required>
    <input type="submit" value="Add">
</form>

<%- include("partials/footer.ejs") %>